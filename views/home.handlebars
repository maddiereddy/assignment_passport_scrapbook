<h1 style="color:blue">Welcome, {{user.username}}</h1>
<hr>
<div class="row">

  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Update Account
      </div>
      <div class="card-body">
        <form class="" action="/profile" method="post">
          <div class="form-group">
            <input type="text" name="username" placeholder="change username" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="password" placeholder="change password" class="form-control">
          </div>
          <button class="btn btn-primary">Change Password</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Passport Status
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          {{#if user.photos}}
            <li class="list-group-item bg-success text-white">
              Facebook
            </li>
          {{else}}
            <li class="list-group-item">
              Facebook
              <a href="/auth/facebook" class="btn btn-success btn-sm float-right">Connect</a>
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </div>

</div>
<br>
<br>

<div class="row">

  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        Facebook stuff
      </div>
      <div class="card-body">
        <img src="{{user.photos}}" alt="">
      </div>
    </div>
  </div>
</div>


